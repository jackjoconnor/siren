        <p><b>Description</b></p>
        <p><%= @boat.description %></p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="show-box booking-box">
        <p><span class="box-price"><b><%= @boat.price %>â‚¬</b></span>/day</p>
        <hr>
