<div class="container">
  <div class="row">
    <div class="col-12 titre">
      <h2>All our boats </h2>
    </div>
  </div>

  <div class="row">
    <div class="col header-boat-number" >
      We found <%= @boats.count %> boats on our website</p>
    </div>
  </div>

  <div class="row">
    <% @boats.each do |boat| %>

      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="boat-card">
          <%= link_to boat_path(boat) do %>
            <div class="boat-card-image" style="background-image: url('<%= boat.photo %>')"></div>
          <% end %>
          <div class="boat-card-content">
            <div class="boat-card-title">
              <h4><%= boat.title %></h4>
            </div>

            <div class="flex icon-container">
              <div class="flex icons">
                <div class="capacity-icon">
                  <i class="fa-spacing fas fa-users"></i><span> <%= boat.capacity %></span>
                </div>
                <i class="fas fa-euro-sign" style="margin-right: 5px"> </i> <%= boat.price %> /day
              </div>
              <div class="btn-card">
                <%= link_to 'More info', boat_path(boat) %>
              </div>
            </div>
          </div>

        </div>
      </div>
    <% end %>

  </div>
</div>









