<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>All our boats </h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      We found <%= @boats.count %> boats on our website.</p>
    </div>
  </div>

  <div class="row">
    <% @boats.each do |boat| %>


      <div class="col-4">
        <div class="boat-card">
          <div class="boat-card-image" style="background-image: url('<%= image_path "boat-card-image.jpg" %>')"></div>
          <div class="boat-card-content">
            <div class="boat-card-title">
              <h4><%= boat.title %></h4>
            </div>

            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span><%= boat.capacity %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <!-- < %= boat.price %> -->
              </div>
            </div>
          </div>
          <!-- <div class="boat-card-actions">
            < %= link_to 'More info', boat_path(boat) %>
          </div> -->
        </div>
      </div>
    <% end %>

  </div>
</div>









